<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE tsung SYSTEM "/usr/local/Cellar/tsung/1.7.0/share/tsung/tsung-1.0.dtd">
<tsung loglevel="warning">

    <clients>
        <client host="localhost" use_controller_vm="true" maxusers="1000000000000"/>
    </clients>

    <servers>
        <!-- <server host="mli01.eba-iap3pwy3.us-west-2.elasticbeanstalk.com" port="3000" type="tcp"/> -->
        <server host="localhost" port="3000" type="tcp"/>
    </servers>

    <load>
        <arrivalphase phase="1" duration="1" unit="minute">
            <users arrivalrate="1" unit="second"/>
        </arrivalphase>
        <arrivalphase phase="2" duration="2" unit="minute">
            <users arrivalrate="10" unit="second"/>
        </arrivalphase>
        <arrivalphase phase="3" duration="3" unit="minute">
            <users arrivalrate="50" unit="second"/>
        </arrivalphase>
    </load>

    <sessions>
        <session name="guest_room_creator" weight="0.8" type="ts_http">
            <!-- home page -->
            <request>
                <http url='/' method="GET" />
            </request>


            <!-- create guest user -->
            <request>
                <dyn_variable name="user_id" jsonpath="$.user_data.id"/>
                <http url='/guest_signin/' method="POST"
                    content_type='application/json'
                    contents_from_file="guest.json" />
            </request>


            <!-- guest creates room -->
            <request>
                <dyn_variable name="room_token" jsonpath="$.room_token"/>
                <dyn_variable name="room_id" jsonpath="$.id"/>
                <http url="/room" method="POST"
                    content_type='application/json'
                    contents_from_file="room.json" />
            </request>


            <!-- rooms page -->
            <request>
                <http url='/room/join' method="POST" />
            </request>


            <!-- add guest as member -->
            <request subst="true">
                <http url="/member" method="POST"
                    content_type='application/json'
                    contents='{
                        &quot;user_id&quot;: &quot;%%_user_id%%&quot;,
                        &quot;room_id&quot;: &quot;%%_room_id%%&quot;,
                        &quot;is_host&quot;: &quot;true&quot;
                    }' />
            </request>

            <!-- enter room  -->
            <request subst="true">
                <http url="/room/%%_room_id%%/?user_id=%%_user_id%%" method="GET" />
            </request>

        </session>

        <session name="restaurant_owner" weight="0.2" type="ts_http">
            <!-- create guest user -->
            <request>
                <dyn_variable name="user_id" jsonpath="$.user_data.id"/>
                <http url='/guest_signin/' method="POST"
                    content_type='application/json'
                    contents_from_file="guest.json" />
            </request>

            <!-- guest creates room -->
            <request>
                <dyn_variable name="room_token" jsonpath="$.room_token"/>
                <dyn_variable name="room_id" jsonpath="$.id"/>
                <http url="/room" method="POST"
                    content_type='application/json'
                    contents_from_file="room.json" />
            </request>


        </sessions>
    </sessions>
</tsung>