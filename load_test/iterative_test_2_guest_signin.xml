<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE tsung SYSTEM "/usr/local/Cellar/tsung/1.7.0/share/tsung/tsung-1.0.dtd">
<tsung loglevel="warning">

    <clients>
        <client host="localhost" use_controller_vm="true" maxusers="1000000000000"/>
    </clients>

    <servers>
        <server host="aprilsanchez.eba-iap3pwy3.us-west-2.elasticbeanstalk.com" port="80" type="tcp"/>
        <!-- <server host="localhost" port="3000" type="tcp"/> -->
    </servers>

    <load>
        <!-- Test 1 -->
        <arrivalphase phase="1" duration="10" unit="second">
            <users arrivalrate="200" unit="second"/>
        </arrivalphase>
        <arrivalphase phase="2" duration="10" unit="second">
            <users arrivalrate="400" unit="second"/>
        </arrivalphase>
        <arrivalphase phase="3" duration="10" unit="second">
            <users arrivalrate="600" unit="second"/>
        </arrivalphase>

    </load>

    <sessions>
        <session name="homepage_visitor" weight="1" type="ts_http">
            <!-- home page (models queried for display in react) -->
            <request>
                <http url='/' method="GET" />
            </request>

            <!-- create guest user -->
            <request>
                <dyn_variable name="user_id" jsonpath="$.user_data.id"/>
                <http url='/guest_signin/' method="POST"
                    content_type='application/json'
                    contents_from_file="guest.json" />
            </request>

        </session>
    </sessions>
</tsung>